- content_for :right_column do
  - link = occams_admin_cms_site_snippet_revisions_path(@site, @snippet)
  = render "occams/admin/cms/revisions/sidebar", record: @snippet, link: link

.page-header
  %h2= t('.title')

= occams_form_with model: @snippet, scope: :snippet, url: {action: :update} do |form|
  = render form
